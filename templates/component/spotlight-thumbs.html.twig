<div class="col-md-4 col-sm-4 col-xs-12">
    <div class="spotlight-item-thumb">
        <div class="spotlight-item-thumb-img">
            <a href="{{ path('front_article', {
                'categorie' : article.categorie.slug,
                'slug' : article.slug,
                'id' : article.id})
            }}">
                <img alt="" src="{{ absolute_url(asset('images/product/'~article.FeaturedImage)) }}" />
            </a>
            <a href="{{ path('front_categorie', {'slug': article.categorie.slug}) }}" class="cate-tag">{{ article.categorie.nom }}</a>
        </div>
        <h3><a href="{{ path('front_article', {
                'categorie' : article.categorie.slug,
                'slug' : article.slug,
                'id' : article.id})
            }}">{{ article.titre }}</a></h3>
        <div class="meta-post">
            <a href="#">{{ article.membre.nom ~ ' ' ~ article.membre.prenom }}</a>
            <em></em>
            <span>{{ article.dateCreation | date('d/m/Y') }}</span>
        </div>
    </div>
</div>