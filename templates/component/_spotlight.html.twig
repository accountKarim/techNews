<div>
    <article class="spotlight-item">
        <div class="spotlight-img">
            <img alt="" src="{{ absolute_url(asset('images/product/'~article.FeaturedImage)) }}" class="img-responsive" />
            <a href="{{ path('front_categorie', {'slug': article.categorie.slug}) }}" class="cate-tag">{{ article.categorie.nom }}</a>
        </div>
        <div class="spotlight-item-caption">
            <h2 class="font-heading">
                <a href="{{ path('front_article', {
                    'categorie' : article.categorie.slug,
                    'slug' : article.slug,
                    'id' : article.id})
                }}">
                    {{ article.titre }}
                </a>
            </h2>
            <div class="meta-post">
                <a href="#">
                    {{ article.membre.nom ~ ' ' ~ article.membre.prenom }}
                </a>
                <em></em>
                <span>{{ article.dateCreation | date('d/m/Y') }}</span>
            </div>
            <p>{{ article.contenu | length > 255 ? article.contenu|slice(0, 255) ~ '...' : article.contenu }}</p>
        </div>
    </article>
</div>